@model DemoTruongDuLieuDong.Models.ProductField

@{
    ViewData["Title"] = "Thêm mới trường bổ sung sản phẩm";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden name="tenTruongCu" value="@ViewBag.TenTruongCu" class="form-control" />
            <div class="form-group">
                <label asp-for="TenTruong" class="control-label"></label>
                <input asp-for="TenTruong" class="form-control" />
                <span asp-validation-for="TenTruong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHienThi" class="control-label"></label>
                <input asp-for="TenHienThi" class="form-control" />
                <span asp-validation-for="TenHienThi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KieuDuLieu" class="control-label"></label>
                @*<select asp-for="KieuDuLieu" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(FieldDataTypeEnum)))
                    {
                        <option value="@((int)item)">@item.ToString()</option>
                    }
                </select>*@
                <select asp-for="KieuDuLieu" class="form-control" asp-items="ViewBag.KieuDuLieu"></select>
                <span asp-validation-for="KieuDuLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Index" class="control-label"></label>
                <select asp-for="Index" class="form-control" asp-items="ViewBag.Index"></select>
                <span asp-validation-for="Index" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu luôn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
