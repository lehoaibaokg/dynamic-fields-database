@model DemoTruongDuLieuDong.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="MaHangHoa" class="control-label"></label>
                <input asp-for="MaHangHoa" class="form-control" />
                <span asp-validation-for="MaHangHoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHangHoa" class="control-label"></label>
                <input asp-for="TenHangHoa" class="form-control" />
                <span asp-validation-for="TenHangHoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaNhap" class="control-label"></label>
                <input asp-for="GiaNhap" class="form-control" />
                <span asp-validation-for="GiaNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaBan" class="control-label"></label>
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            @foreach (var item in Model.ProductFields.OrderBy(x => x.Index))
            {
                var index = Model.ProductFields.IndexOf(item);
                <div class="form-group">
                    <label class="control-label">@item.TenHienThi</label>
                    <input asp-for="ProductFields[index].NoiDung" class="form-control" />
                    <input hidden asp-for="ProductFields[index].Id" class="form-control" />
                    <input hidden asp-for="ProductFields[index].TenTruong" class="form-control" />
                    <input hidden asp-for="ProductFields[index].TenHienThi" class="form-control" />
                    <input hidden asp-for="ProductFields[index].KieuDuLieu" class="form-control" />
                    <input hidden asp-for="ProductFields[index].Index" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Lưu luôn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
